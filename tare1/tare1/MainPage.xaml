<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tare1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Calculadora tarea1" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <!--apartado para los text-->
        <Entry Placeholder="Numero 1" Keyboard="Numeric" x:Name="txtuno" Margin="5,0,5,0" TextColor="White"/>
        <Entry Placeholder="Numero 2" Keyboard="Numeric" x:Name="txtdos" Margin="5,0,5,0" TextColor="White"/>
        <!--apartado de botones-->
        <Button Text="suamar" x:Name="sumar"  Margin="10,0,10,0" Clicked="btnsumar_Clicked"/>
        <Button Text="restar" x:Name="restar"  Margin="10,0,10,0" Clicked="btnrestar_Clicked"/>
        <Button Text="multiplicacion" x:Name="mult"  Margin="10,0,10,0" Clicked="btnmult_Clicked"/>
        <Button Text="division" x:Name="div"  Margin="10,0,10,0" Clicked="btndiv_Clicked"/>
    </StackLayout>

</ContentPage>
